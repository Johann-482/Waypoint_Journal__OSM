<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--The two ImageViews bellow are placeholders for Icons and Backgrounds used for dashboard-->

    <ImageView
        android:id="@+id/background_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_dashboard" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="561dp"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="523dp"
        android:text="Waypoint Journal"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="94dp"
        android:layout_height="73dp"
        android:layout_alignTop="@+id/map_button"
        android:layout_alignEnd="@+id/map_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="149dp"
        android:elevation="@android:dimen/app_icon_size"
        android:text="Check the map and see your favorite stores"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="104dp"
        android:layout_height="66dp"
        android:layout_alignStart="@+id/journal_button"
        android:layout_alignTop="@+id/journal_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="152dp"
        android:elevation="@android:dimen/app_icon_size"
        android:text="View your Journal and see your previous adventures"
        android:textAlignment="center" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="206dp"
        android:layout_height="468dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="0dp"
        android:text="Check Map" />

    <Button
        android:id="@+id/journal_button"
        android:layout_width="201dp"
        android:layout_height="467dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="0dp"
        android:text="Check Journal" />

</RelativeLayout>